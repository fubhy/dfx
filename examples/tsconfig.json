{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "tsPlusTypes": [
      "./vendor/effect-io-tsplus.json",
      "./vendor/fp-ts-data-tsplus.json"
    ]
  },
  "exclude": ["node_modules/**/*"],
  "include": ["src/**/*"]
}
