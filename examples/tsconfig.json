{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "tsPlusTypes": [
      "./node_modules/@tsplus-types/effect__io/annotations.json",
      "./node_modules/@tsplus-types/effect__stream/annotations.json",
      "./node_modules/@tsplus-types/fp-ts__data/annotations.json"
    ]
  },
  "exclude": ["node_modules/**/*"],
  "include": ["src/**/*"]
}
