{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "ES6",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "ES2022",
    "incremental": true,
    "tsPlusConfig": "./tsplus.config.json",
    "tsPlusTypes": [
      "./vendor/effect-io-tsplus.json",
      "./vendor/fp-ts-data-tsplus.json"
    ],
    "paths": {
      "dfx/*": ["./src/*.js"]
    },
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "exclude": ["node_modules/**/*", "_old/**/*"],
  "include": ["src/**/*"]
}
