{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "ES2022",
    "incremental": true,
    "tsPlusConfig": "./tsplus.config.json",
    "paths": {
      "dfx": ["./src/index.js"],
      "dfx/*": ["./src/*.js"]
    },
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
