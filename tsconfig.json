{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "ES2022",
    "incremental": true,
    "tsPlusConfig": "./tsplus.config.json",
    "tsPlusTypes": [
      "./node_modules/@tsplus-json/effect-io/annotations.json",
      "./node_modules/@tsplus-json/effect-stream/annotations.json",
      "./node_modules/@tsplus-json/fp-ts-data/annotations.json"
    ],
    "paths": {
      "dfx": ["./src/index.js"],
      "dfx/*": ["./src/*.js"]
    },
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
